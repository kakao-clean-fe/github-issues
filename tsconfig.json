{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
  },
  "include": ["src/**/*.ts", "src/__test__/**/*.js"],
  "exclude": ["node_modules"]
}